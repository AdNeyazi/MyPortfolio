<section class="bg-gray-100 py-20" id="contact">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12" style="color: var(--color-primary);">
      Contact Me
    </h2>
    <div class="max-w-lg mx-auto">
      <%= form_with model: Contact.new, url: contacts_path, method: :post, local: true, html: { class: "bg-white p-8 rounded-lg shadow-md hover:shadow-lg transition duration-300" } do |f| %>
        <div class="mb-4">
          <%= f.label :name, class: "block text-lg font-medium mb-2", style: "color: var(--color-primary);" %>
          <%= f.text_field :name, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-secondary" %>
        </div>
        <div class="mb-4">
          <%= f.label :email, class: "block text-lg font-medium mb-2", style: "color: var(--color-primary);" %>
          <%= f.email_field :email, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-secondary" %>
        </div>
        <div class="mb-4">
          <%= f.label :message, class: "block text-lg font-medium mb-2", style: "color: var(--color-primary);" %>
          <%= f.text_area :message, rows: 4, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-secondary" %>
        </div>
        <%= f.submit "Send Message", class: "w-full bg-primary text-white px-4 py-2 rounded-lg text-lg font-bold hover:bg-tertiary transition duration-300", style: "background-color: var(--color-primary);" %>
      <% end %>
    </div>
  </div>
</section>