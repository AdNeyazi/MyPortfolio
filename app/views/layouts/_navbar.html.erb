  <nav class="bg-white shadow-md fixed w-full z-10">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a class="text-2xl font-bold" href="#" style="color: var(--color-primary);">
      My Portfolio
    </a>

    <!-- Desktop Menu -->
    <ul class="hidden md:flex space-x-6">
      <li>
        <a class="relative group" href="#about" style="color: var(--color-primary);">
          About
          <span class="absolute left-0 bottom-0 w-0 h-1 bg-secondary transition-all duration-300 group-hover:w-full"></span>
        </a>
      </li>
      <li>
        <a class="relative group" href="#projects" style="color: var(--color-primary);">
          Projects
          <span class="absolute left-0 bottom-0 w-0 h-1 bg-secondary transition-all duration-300 group-hover:w-full"></span>
        </a>
      </li>
      <li>
        <a class="relative group" href="#contact" style="color: var(--color-primary);">
          Contact
          <span class="absolute left-0 bottom-0 w-0 h-1 bg-secondary transition-all duration-300 group-hover:w-full"></span>
        </a>
      </li>
      
      <!-- Authentication Buttons -->
      <% if user_signed_in? %>
        <li>
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition duration-300" %>
        </li>
      <% else %>
        <li>
          <%= link_to 'Sign In', new_user_session_path, class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition duration-300" %>
        </li>
        <li>
          <%= link_to 'Sign Up', new_user_registration_path, class: "px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition duration-300" %>
        </li>
      <% end %>
    </ul>

    <!-- Mobile Menu Button -->
    <div class="md:hidden">
      <button class="text-2xl focus:outline-none" id="menu-btn">
        <i class="fas fa-bars" style="color: var(--color-primary);"></i>
      </button>
    </div>
  </div>

  <!-- Mobile Dropdown Menu -->
  <ul class="hidden md:hidden flex flex-col space-y-4 px-4 py-4 bg-white shadow-md" id="menu">
    <li><a class="hover:text-secondary transition duration-300" href="#about" style="color: var(--color-primary);">About</a></li>
    <li><a class="hover:text-secondary transition duration-300" href="#projects" style="color: var(--color-primary);">Projects</a></li>
    <li><a class="hover:text-secondary transition duration-300" href="#contact" style="color: var(--color-primary);">Contact</a></li>
    
    <!-- Mobile Authentication Links -->
    <% if user_signed_in? %>
      <li>
        <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "block text-center px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition duration-300" %>
      </li>
    <% else %>
      <li>
        <%= link_to 'Sign In', new_user_session_path, class: "block text-center px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition duration-300" %>
      </li>
      <li>
        <%= link_to 'Sign Up', new_user_registration_path, class: "block text-center px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition duration-300" %>
      </li>
    <% end %>
  </ul>
</nav>
